<h1 class="text-center">A Query!</h1>

<form>
  <div class="form-group">
    <label for="name">Name: </label>
    {{input value=name id='name' class='form-control'}}
  </div>
  <div class="form-group">
    <label for="questionText">Subject: </label>
    {{input value=questionText id='questionText' class='form-control'}}
  </div>
  <div class="form-group">
    <label for="questionBody">Question Body: </label>
    {{textarea value=questionBody id='questionBody' rows="15"  class='form-control'}}
  </div>
  <button class="btn btn-default" {{action 'addQuestion'}}>Ask!</button>
</form>
